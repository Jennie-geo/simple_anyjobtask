

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User {
  id    Int  @id @default(autoincrement())
  firstName String
  lastName String
  email String  @unique
  password String
  account Account[]

  sender Invite? @relation(name: "sender")
  receiver Invite? @relation(name: "receiver")

  verifyAccount Boolean @default(false)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("users")
}

model Account {
  id Int @id @default(autoincrement())
  title String?
  numberofbuddy Int?
  anyTarget Target @default(NO)
  methodofsaving SavingMethod @default (MANUAL)
  savingfrequency SavingFrequency @default(DAILY)
  howmuchtosave Int
  datetostartsaving String?
  savingTimeLength SAVINGTIMELENGTH @default(THREE_MONTHS)
  invite Invite[]
  creator     User    @relation(fields: [creatorId], references: [id])
  creatorId   Int
  members Member[]
  startdate String
  endDate String

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

   @@map("account")
}

model Member {
  id Int @id @default(autoincrement())
  userId Int
  account Account @relation(fields: [accountId], references: [id])
  accountId Int
  relationshipWithBuddy String

  @@map("accountMember")
}

model Invite {

  id Int @id @default(autoincrement()) 
  sender     User   @relation(name: "sender", fields: [senderId], references: [id]) 
  receiver   User   @relation(name: "receiver", fields: [receiverId], references: [id])
  senderId   Int @unique
  receiverId Int @unique
  account Account @relation(fields: [accountId], references: [id])
  accountId Int
  relationshipWithBuddy String
  methodofsaving SavingMethod @default(MANUAL)
  savingfrequency SavingFrequency @default(DAILY)
  startdate String
  howmuchtosave Int
  savingTimeLength SAVINGTIMELENGTH @default(THREE_MONTHS)
  status Status @default(Rejected)
  isPending Boolean @default(true)

  @@map("invites")
}

enum UserRole {
  ISADMIN
  USER
}

enum Status {
  ACCEPTED
  Rejected
}

enum Target {
 YES
 NO
}
enum SavingMethod {
  AUTOMATIC
  MANUAL
}
enum SavingFrequency {
  DAILY
  WEEKLY
  MONTHLY
}
enum SAVINGTIMELENGTH {
THREE_MONTHS
SIX_MONTHS
ONE_YEAR
}
